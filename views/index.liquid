{% render 'partials/head.liquid', title: 'Squad page' %}

<h2>Students</h2>
<ul class="people-list">
  {% for person in persons %}
    <li class="people-card" style="background-color: {{ person.fav_color }};">
      <a href="/student/{{ person.id }}">
        <h3 class="person-name">{{ person.github_handle }}</h3>
      </a>

      <p class="person-team">{{ person.team }}</p>
      <p class="person-hp">{{ person.shoe_size | default: 40 }} hp</p>
      <img class="person-img" src="{{person.avatar}}" alt=" {{ person.name }}">
      <p class="person-move">
        Kan {{ person.id }} damage doen door een {{ person.fav_attribute | escape }} op een
        {{ person.fav_tag | escape }}
        te zetten.
      </p>
      <p class="person-move">
        Kan {{ person.fav_border_radius | escape }} hp herstellen als het {{ person.fav_season }} is en er
        {{ person.fav_animal }} aanwezig is in {{ person.residency }}
      </p>
      <p class="person-move">
        Wanneer {{ person.name }} op het veld is met andere van team {{ person.team }} kan {{ person.fav_emoji }}
        ingezet worden.
      </p>

      {% comment %} {{person.mugshot }} {% endcomment %}
    </li>
  {% endfor %}
</ul>

{% render 'partials/foot.liquid', squads: squads %}
